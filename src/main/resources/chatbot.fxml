<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="550.0" prefWidth="750.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="chatbot.ChatController">

    <VBox fx:id="dialogContainer" spacing="10" AnchorPane.bottomAnchor="50.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
    </VBox>

    <HBox fx:id="inputContainer" maxHeight="300.0" minHeight="50.0" prefHeight="50.0" prefWidth="252.0" spacing="10" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
        <TextField fx:id="userInput" prefHeight="25.0" prefWidth="649.0" promptText="Type a message..." HBox.hgrow="ALWAYS" />
        <Button fx:id="sendButton" onAction="#handleUserInput" text="Send" />
    </HBox>

</AnchorPane>
